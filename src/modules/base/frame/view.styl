@import "../../../assets/css/define.styl";
.page{
    height: 100%;
    width: 100%;

    .left{
        position: relative;
        margin-right: 5px;
        background-color: #36B4FD;
        color: #fff;

        .el-menu{

            .el-submenu__title,.el-menu-item{
                color: #fff;
            }
        }
        .logo{
            margin: 0 auto;
            margin-left: -30px;
            height: 100px;
            text-align: center;
            background-color: #36B4FD;

            i{
                position: absolute;
                top: 50px;
                transform: translateY(-50%);
                font-size: 24px;
                cursor: pointer;
            }

        }
        .active{
            border-bottom: 2px solid rgba(0,0,0,.15);

            .img{
                display: inline-block;
                margin: 10px 0;
                height 80px;
                width: 180px;
                background: url('../../../assets/img/logo.png') no-repeat 0 15px;
            }
            i{
                right: 20px;
            }
        }
        .el-menu{
            border-right none

            .el-menu-item{
                height: 40px;
                line-height: 40px;
            }
            .is-active {
                background: repeating-linear-gradient(rgba(255,255,255,.2) , rgba(54, 180, 253,.8), rgba(255,255,255,.2))!important;
            }
            .el-menu-item, .el-submenu{
                .iconfont{

                    margin-right: 5px;
                    width: 24px;
                    text-align: center;
                    font-size: 18px;
                    vertical-align: middle;
                }
            }
        }

    }
    .el-main{
        display: flex;
        flex-direction: column;
        padding: 0;
        border: 1px solid #3e3eaa;
        overflow auto

        >div{
        }

        .tabs-content{
            flex: 1;
        }
    }
}
