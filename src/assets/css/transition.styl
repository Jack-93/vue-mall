//
.fade-enter{
	opacity: 0;
}
.fade-enter-active{
	transition: all .3s ease;
}
.fade-leave-active{
	opacity: 0;
	transition: all .3s ease;
}

// 
.fadeUp-enter{
	opacity: 0;
	transform: translateY(20px);
}
.fadeUp-enter-active{
	transition: all .3s ease;
}
.fadeUp-leave-active{
	opacity: 0;
	transform: translateY(-20px);
	transition: all .3s ease;
}

// 
.fadeDown-enter{
	opacity: 0;
	transform: translateY(20px);
}
.fadeDown-enter-active{
	transition: all .3s ease;
}
.fadeDown-leave-active{
	opacity: 0;
	transform: translateY(20px);
	transition: all .3s ease;
}


// 向左滑入
.slide-left-enter {
	transform: translate3d(100%,0,0);
}
.slide-left-enter-active{
	transition: all .2s linear;
}
.slide-left-leave-active{
	transition: all .2s linear;
	transition-delay: 0.1s;
	transform: translate3d(-100%,0,0);
}


// 向右滑出
.slide-right-enter {
	z-index: 9;
	opacity: 0;
	transform: translate3d(-10%,0,0);
	transition-delay: 1s;

}
.slide-right-enter-active{
	z-index: 9;
	transition: all .2s linear;

}
.slide-right-leave {
	z-index: 10;
}
.slide-right-leave-active{
	z-index: 10;
	transition: all .2s linear;
	transform: translate3d(100%,0,0);
}
