// 输入框-全尺寸
.g-input-full{
	width: 100%;
}



/**
 * 文本框
 */
// 基类
.g-textarea{
	width: 100%;
	height: 200px;
	padding: 0 5px;
	border: 1px solid #eee;

	&:focus{
		border: 1px solid $c_green;
		border-radius: 5px;
		box-shadow: inset 0px 2px 0px rgba(0, 0, 0, 0.05);
		padding: 0 5px;
	}
}

/**
* 搜索框
*/
.g-search{
	position: relative;
	input{
			height: 40px;
			font-size: $s5;
			padding-left: 8px;
			width: 100%;
			border: 1px solid $c_border_light ;
		}

		.icon-searchfor{
			position: absolute;
			color: $c_tip;
			top: 8px;
			right: 10px;
			font-size: 20px;
		}

		// placeholder 颜色设置
		::-webkit-input-placeholder { /* WebKit browsers */
			color: $c_tip;
		}
		:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
			color: $c_tip;
		}
		::-moz-placeholder { /* Mozilla Firefox 19+ */
			color: $c_tip;
		}
		:-ms-input-placeholder { /* Internet Explorer 10+ */
			color: $c_tip;
		}
}

/*下拉框*/
.g-dropmenu{
		border: 1px solid $c_border_light;
		background: $c_white;
		height: 40px;
		line-height: 40px;
		font-size: $s5;
		color: $c_gray;
		position: relative;
	/*	margin: 15px;*/

		>i{
			position: absolute;
			right: 5px;
			top: 0px;
			font-size: 16px;
			color: $c_gray_light;
		}
		>span{
			margin-left: 10px;
		}
}
